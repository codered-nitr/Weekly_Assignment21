class Solution{   
public:
    int getPairsCount(int a[], int n, int k) {
        // code here
        unordered_map<int, int> m;

        for (int i = 0; i < n; i++) 
            m[a[i]]++;
        
        int count = 0;
        for (int i = 0; i < n; i++) {
            count += m[k - a[i]];

            if (k - a[i] == a[i]) {
                count--;
            }
        }

        return (count / 2);

        
    }
};
